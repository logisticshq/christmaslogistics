    </div>
  </section>

  <!-- CTA Section -->
  <section class="section cta">
    <div class="container">
      <div class="cta-content">
        <div class="cta-text">
          <h2>Ready to <span class="text-gold">Get Started</span>?</h2>
          <p>Experience the Christmas Logistics difference today.</p>
        </div>
        <a href="/about" class="btn btn-gold">Learn About Us</a>
      </div>
