            <li>Same-day delivery available</li>
            <li>Next-day guaranteed service</li>
            <li>Real-time tracking updates</li>
            <li>Signature confirmation</li>
            <li>Priority handling</li>
          </ul>
        </div>
        <div class="service-visual">
          <div class="visual-card red">
            <span class="card-number">2-4</span>
            <span class="card-label">Hour Delivery Window</span>
          </div>
        </div>
      </div>

      <!-- Freight Services -->
