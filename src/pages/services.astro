</Layout>

<style>
  /* Page Hero */
  .page-hero {
    background: linear-gradient(135deg, var(--christmas-red) 0%, #8b1428 100%);
    color: white;
    text-align: center;
    padding: var(--space-3xl) 0 var(--space-2xl);
  }

  .hero-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    padding: var(--space-xs) var(--space-md);
    border-radius: 50px;
    font-size: 0.9rem;
    margin-bottom: var(--space-md);
  }

  .page-hero h1 {
    color: white;
    margin-bottom: var(--space-md);
  }

  .page-hero .highlight {
    color: var(--gold-light);
  }

  .page-hero p {
    font-size: 1.25rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Services Intro */
  .services-intro {
    background: var(--snow-white);
    text-align: center;
  }

  .intro-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .intro-content h2 {
    margin-bottom: var(--space-md);
  }

  .intro-content p {
    color: #555;
    font-size: 1.1rem;
    margin: 0 auto;
  }

  /* Main Services */
  .main-services {
    background: white;
  }

  .service-block {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
    padding: var(--space-2xl) 0;
    border-bottom: 1px solid #eee;
  }

  .service-block:last-child {
    border-bottom: none;
  }

  .service-block.reverse {
    direction: rtl;
  }

  .service-block.reverse > * {
    direction: ltr;
  }

  .service-icon-large {
    font-size: 4rem;
    display: block;
    margin-bottom: var(--space-md);
  }

  .service-content h3 {
    color: var(--christmas-green);
    margin-bottom: var(--space-md);
  }

  .service-content p {
    color: #555;
    margin-bottom: var(--space-lg);
  }

  .service-features {
    list-style: none;
    display: grid;
    gap: var(--space-sm);
  }

  .service-features li {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: #444;
  }

  .service-features li::before {
    content: '‚úì';
    color: var(--christmas-green);
    font-weight: bold;
  }

  .visual-card {
    background: linear-gradient(135deg, var(--christmas-red) 0%, #8b1428 100%);
    border-radius: 20px;
    padding: var(--space-2xl);
    text-align: center;
    color: white;
    box-shadow: var(--shadow-xl);
  }

  .visual-card.green {
    background: linear-gradient(135deg, var(--christmas-green) 0%, #0d3d24 100%);
  }

  .visual-card.gold {
    background: linear-gradient(135deg, var(--gold) 0%, #b8962e 100%);
    color: var(--midnight);
  }

  .card-number {
    display: block;
    font-family: var(--font-display);
    font-size: 4rem;
    font-weight: 700;
    margin-bottom: var(--space-xs);
  }

  .card-label {
    font-size: 1.1rem;
    opacity: 0.9;
  }

  /* Additional Services */
  .additional-services {
    background: var(--frost);
  }

  .add-service-card {
    background: white;
    border-radius: 12px;
    padding: var(--space-lg);
    text-align: center;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
  }

  .add-service-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-xl);
  }

  .add-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: var(--space-sm);
  }

  .add-service-card h4 {
    color: var(--christmas-green);
    margin-bottom: var(--space-xs);
  }

  .add-service-card p {
    color: #666;
    font-size: 0.9rem;
    margin: 0;
  }

  /* Why Choose */
  .why-choose {
    background: linear-gradient(135deg, var(--christmas-green) 0%, #0d3d24 100%);
    color: white;
  }

  .why-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
  }

  .why-content h2 {
    color: white;
    margin-bottom: var(--space-md);
  }

  .why-content p {
    opacity: 0.9;
    margin-bottom: var(--space-lg);
  }

  .why-list {
    list-style: none;
    margin-bottom: var(--space-lg);
  }

  .why-list li {
    display: flex;
    align-items: flex-start;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
  }

  .check {
    color: var(--gold-light);
    font-weight: bold;
  }

  .trust-badges {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-md);
  }

  .badge-item {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    padding: var(--space-lg);
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .badge-icon {
    font-size: 2rem;
    display: block;
    margin-bottom: var(--space-xs);
  }

  .badge-text {
    font-size: 0.9rem;
    font-weight: 500;
  }

  /* CTA Section */
  .cta {
    background: linear-gradient(135deg, var(--midnight) 0%, var(--charcoal) 100%);
  }

  .cta-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-xl);
  }

  .cta h2 {
    color: white;
    margin-bottom: var(--space-sm);
  }

  .cta p {
    color: rgba(255, 255, 255, 0.8);
  }

  /* Responsive */
  @media (max-width: 968px) {
    .service-block,
    .service-block.reverse {
      grid-template-columns: 1fr;
      direction: ltr;
    }

    .service-visual {
      order: -1;
    }

    .visual-card {
      max-width: 300px;
      margin: 0 auto;
    }

    .why-grid {
      grid-template-columns: 1fr;
    }

    .cta-content {
      flex-direction: column;
      text-align: center;
    }
  }

  @media (max-width: 576px) {
    .trust-badges {
      grid-template-columns: 1fr;
    }
  }
</style>
