</Layout>

<style>
  /* Page Hero */
  .page-hero {
    background: linear-gradient(135deg, var(--christmas-red) 0%, #8b1428 100%);
    color: white;
    text-align: center;
    padding: var(--space-3xl) 0 var(--space-2xl);
  }

  .hero-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    padding: var(--space-xs) var(--space-md);
    border-radius: 50px;
    font-size: 0.9rem;
    color: var(--gold-light);
    margin-bottom: var(--space-md);
  }

  .page-hero h1 {
    color: white;
    margin-bottom: var(--space-md);
  }

  .page-hero p {
    font-size: 1.25rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Overview Section */
  .overview {
    background: var(--snow-white);
    text-align: center;
  }

  .overview-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .overview-content h2 {
    margin-bottom: var(--space-md);
  }

  .overview-content p {
    color: #555;
    font-size: 1.1rem;
    margin: 0 auto;
  }

  /* Services Detail */
  .services-detail {
    background: white;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-xl);
  }

  .service-block {
    display: flex;
    gap: var(--space-lg);
    padding: var(--space-lg);
    background: var(--frost);
    border-radius: 16px;
  }

  .service-icon-large {
    font-size: 3rem;
    flex-shrink: 0;
  }

  .service-content h3 {
    color: var(--christmas-green);
    margin-bottom: var(--space-sm);
  }

  .service-content p {
    color: #555;
    margin-bottom: var(--space-md);
    font-size: 0.95rem;
  }

  .service-list {
    list-style: none;
  }

  .service-list li {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) 0;
    color: #444;
    font-size: 0.9rem;
  }

  .service-list li::before {
    content: '‚úì';
    color: var(--christmas-green);
    font-weight: bold;
  }

  /* Technology Section */
  .technology {
    background: linear-gradient(135deg, var(--christmas-green) 0%, #0d3d24 100%);
    color: white;
  }

  .tech-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .tech-text h2 {
    color: white;
    text-align: center;
    margin-bottom: var(--space-sm);
  }

  .tech-text > p {
    text-align: center;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: var(--space-xl);
  }

  .tech-features {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
  }

  .tech-item {
    display: flex;
    gap: var(--space-md);
    align-items: flex-start;
    background: rgba(255, 255, 255, 0.1);
    padding: var(--space-md);
    border-radius: 12px;
  }

  .tech-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .tech-item strong {
    display: block;
    color: var(--gold-light);
    margin-bottom: 4px;
  }

  .tech-item p {
    font-size: 0.9rem;
    opacity: 0.9;
    margin: 0;
  }

  /* Fleet Section */
  .fleet {
    background: var(--frost);
  }

  .fleet-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-md);
  }

  .fleet-card {
    background: white;
    border-radius: 16px;
    padding: var(--space-lg);
    text-align: center;
    box-shadow: var(--shadow-md);
  }

  .fleet-icon {
    font-size: 2.5rem;
    margin-bottom: var(--space-sm);
  }

  .fleet-card h3 {
    color: var(--christmas-green);
    margin-bottom: var(--space-xs);
    font-size: 1.1rem;
  }

  .fleet-card p {
    color: #666;
    font-size: 0.9rem;
    margin: 0;
  }

  /* CTA Section */
  .cta {
    background: linear-gradient(135deg, var(--midnight) 0%, var(--charcoal) 100%);
  }

  .cta-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-xl);
  }

  .cta h2 {
    color: white;
    margin-bottom: var(--space-sm);
  }

  .cta p {
    color: rgba(255, 255, 255, 0.8);
  }

  /* Responsive */
  @media (max-width: 968px) {
    .services-grid {
      grid-template-columns: 1fr;
    }

    .tech-features {
      grid-template-columns: 1fr;
    }

    .fleet-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .cta-content {
      flex-direction: column;
      text-align: center;
    }
  }

  @media (max-width: 576px) {
    .service-block {
      flex-direction: column;
      text-align: center;
    }

    .fleet-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
