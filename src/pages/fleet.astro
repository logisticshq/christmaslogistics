</Layout>

<style>
  /* Page Hero */
  .page-hero {
    background: linear-gradient(135deg, var(--midnight) 0%, var(--charcoal) 100%);
    color: white;
    text-align: center;
    padding: var(--space-3xl) 0 var(--space-2xl);
  }

  .hero-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    padding: var(--space-xs) var(--space-md);
    border-radius: 50px;
    font-size: 0.9rem;
    margin-bottom: var(--space-md);
  }

  .page-hero h1 {
    color: white;
    margin-bottom: var(--space-md);
  }

  .page-hero .highlight {
    color: var(--gold-light);
  }

  .page-hero p {
    font-size: 1.25rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Fleet Overview */
  .fleet-overview {
    background: var(--snow-white);
  }

  .overview-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
  }

  .overview-content h2 {
    margin-bottom: var(--space-md);
  }

  .overview-content p {
    color: #555;
    margin-bottom: var(--space-lg);
  }

  .fleet-stats {
    display: flex;
    gap: var(--space-xl);
  }

  .fleet-stat {
    text-align: center;
  }

  .stat-value {
    display: block;
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--christmas-red);
  }

  .stat-name {
    font-size: 0.9rem;
    color: #666;
  }

  .vehicle-showcase {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-md);
  }

  .vehicle-card {
    background: white;
    border-radius: 16px;
    padding: var(--space-lg);
    text-align: center;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
  }

  .vehicle-card.main {
    grid-column: 1 / -1;
    background: linear-gradient(135deg, var(--christmas-red) 0%, #8b1428 100%);
    color: white;
  }

  .vehicle-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-xl);
  }

  .vehicle-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: var(--space-xs);
  }

  .vehicle-name {
    font-weight: 600;
    font-size: 0.95rem;
  }

  /* Vehicle Types */
  .vehicle-types {
    background: white;
  }

  .type-card {
    background: var(--frost);
    border-radius: 16px;
    padding: var(--space-xl);
    position: relative;
    transition: all var(--transition-base);
  }

  .type-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }

  .type-header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .type-icon {
    font-size: 2.5rem;
  }

  .type-header h3 {
    color: var(--christmas-green);
    margin: 0;
  }

  .type-card > p {
    color: #555;
    margin-bottom: var(--space-md);
    font-size: 0.95rem;
  }

  .type-specs {
    list-style: none;
    font-size: 0.9rem;
  }

  .type-specs li {
    padding: var(--space-xs) 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    color: #444;
  }

  .type-specs li:last-child {
    border-bottom: none;
  }

  .type-badge {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    background: var(--christmas-red);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 4px 12px;
    border-radius: 20px;
  }

  .type-badge.green {
    background: var(--christmas-green);
  }

  .type-badge.gold {
    background: var(--gold);
    color: var(--midnight);
  }

  /* Technology */
  .technology {
    background: linear-gradient(135deg, var(--christmas-red) 0%, #8b1428 100%);
    color: white;
  }

  .tech-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
  }

  .tech-content h2 {
    color: white;
    margin-bottom: var(--space-md);
  }

  .tech-content > p {
    opacity: 0.9;
    margin-bottom: var(--space-lg);
  }

  .tech-features {
    display: grid;
    gap: var(--space-md);
  }

  .tech-item {
    display: flex;
    gap: var(--space-md);
    align-items: flex-start;
  }

  .tech-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .tech-item h4 {
    color: var(--gold-light);
    margin-bottom: var(--space-xs);
    font-size: 1.1rem;
  }

  .tech-item p {
    font-size: 0.9rem;
    opacity: 0.85;
    margin: 0;
  }

  .tech-dashboard {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    padding: var(--space-lg);
  }

  .dashboard-header {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-weight: 600;
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-md);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  .status-dot {
    width: 10px;
    height: 10px;
    background: #4ade80;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .dashboard-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
    text-align: center;
  }

  .dash-value {
    display: block;
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 700;
    color: var(--gold-light);
  }

  .dash-label {
    font-size: 0.8rem;
    opacity: 0.8;
  }

  /* Sustainability */
  .sustainability {
    background: var(--frost);
  }

  .green-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-md);
  }

  .green-card {
    background: white;
    border-radius: 16px;
    padding: var(--space-xl);
    text-align: center;
    box-shadow: var(--shadow-md);
    border-top: 4px solid var(--christmas-green);
  }

  .green-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: var(--space-sm);
  }

  .green-card h4 {
    color: var(--christmas-green);
    margin-bottom: var(--space-xs);
  }

  .green-card p {
    color: #666;
    font-size: 0.9rem;
    margin: 0;
  }

  /* Facilities */
  .facilities {
    background: white;
  }

  .facility-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-md);
  }

  .facility-card {
    background: linear-gradient(135deg, var(--christmas-green) 0%, #0d3d24 100%);
    color: white;
    border-radius: 16px;
    padding: var(--space-xl);
    text-align: center;
    transition: all var(--transition-base);
  }

  .facility-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-xl);
  }

  .facility-icon {
    font-size: 2.5rem;
    margin-bottom: var(--space-sm);
  }

  .facility-card h4 {
    color: white;
    margin-bottom: var(--space-xs);
    font-size: 1rem;
  }

  .facility-count {
    display: block;
    font-family: var(--font-display);
    font-size: 3rem;
    font-weight: 700;
    color: var(--gold-light);
    margin-bottom: var(--space-xs);
  }

  .facility-card p {
    font-size: 0.85rem;
    opacity: 0.85;
    margin: 0;
  }

  /* CTA Section */
  .cta {
    background: linear-gradient(135deg, var(--midnight) 0%, var(--charcoal) 100%);
  }

  .cta-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-xl);
  }

  .cta h2 {
    color: white;
    margin-bottom: var(--space-sm);
  }

  .cta p {
    color: rgba(255, 255, 255, 0.8);
  }

  /* Responsive */
  @media (max-width: 968px) {
    .overview-grid,
    .tech-grid {
      grid-template-columns: 1fr;
    }

    .fleet-stats {
      justify-content: center;
    }

    .green-grid,
    .facility-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .cta-content {
      flex-direction: column;
      text-align: center;
    }
  }

  @media (max-width: 576px) {
    .green-grid,
    .facility-grid {
      grid-template-columns: 1fr;
    }

    .dashboard-stats {
      grid-template-columns: 1fr;
    }

    .vehicle-showcase {
      grid-template-columns: 1fr;
    }

    .vehicle-card.main {
      grid-column: auto;
    }
  }
</style>
