  <!-- Technology -->
  <section class="section technology">
    <div class="container">
      <div class="tech-grid">
        <div class="tech-content">
          <h2>Fleet <span class="text-gold">Technology</span></h2>
          <p>
            Every vehicle in our fleet is equipped with cutting-edge technology
